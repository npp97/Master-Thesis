function plot_points( P, fig )
    figure(fig)
    
    for j = 1:P.pdim
        for k = 1:P.pdim
            if(j == k)
                % 1D case
                subplot(P.pdim,P.pdim,(j-1)*P.pdim+k)
                
                
                
                
            elseif(j > k)
                % 2D case
                subplot(P.pdim,P.pdim,(j-1)*P.pdim+k)
                
                scatter(P.Xp(:,
                
                
                
            end
        end
    end
end